<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>login.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SinuUpServlet</servlet-name>
        <servlet-class>signup.SignUpServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserHomeServlet</servlet-name>
        <servlet-class>user.UserHomeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserOrdersServlet</servlet-name>
        <servlet-class>user.UserOrdersServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SinuUpServlet</servlet-name>
        <url-pattern>/SinuUp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserHomeServlet</servlet-name>
        <url-pattern>/shop</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserOrdersServlet</servlet-name>
        <url-pattern>/orders</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <filter>
        <filter-name>admin</filter-name>
        <filter-class>filter.AdminFilter</filter-class>
    </filter>
    <filter>
        <filter-name>user</filter-name>
        <filter-class>filter.UserFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>admin</filter-name>
        <url-pattern>/admin/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>user</filter-name>
        <url-pattern>/orders/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>user</filter-name>
        <url-pattern>/ProductDetails/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>user</filter-name>
        <url-pattern>/UserCart/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>user</filter-name>
        <url-pattern>/UserCart/*</url-pattern>
    </filter-mapping>    
    
    
    <filter-mapping>
        <filter-name>user</filter-name>
        <url-pattern>/shop/*</url-pattern>
    </filter-mapping>
    <welcome-file-list>
        <welcome-file>home/home.jsp</welcome-file>
    </welcome-file-list>
    <error-page>
        <location>/error/error.jsp</location>
    </error-page>
        
    <welcome-file-list>
        <welcome-file>/home/home.jsp</welcome-file>
    </welcome-file-list>
    
</web-app>
